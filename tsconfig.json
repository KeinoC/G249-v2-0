{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/events/page.jsx", "app/Context/EventProvider/EventContext.jsx", "app/Context/MediaProvider/MediaContext.jsx", "app/Context/MiscProvider/MiscContext.jsx", "app/Context/AppProvider.jsx", "app/dashboard/ExploreTab/ExploreTab.jsx", "app/dashboard/FAQ/ClientFAQ.jsx", "app/dashboard/MyEvents/ClientEvents.jsx", "app/dashboard/MyEvents/EventCalendar.jsx", "app/dashboard/page.jsx", "app/events/NewEventForm.jsx", "app/booking/page.jsx", "app/booking/BookingStepper.jsx", "app/booking/BookingForm.jsx", "app/dashboard/MyProfile/ClientProfile.jsx", "app/dashboard/MyProfile/ClientProfileForm.jsx", "app/dashboard/MyProfile/ProfileSummary.jsx", "app/dashboard/ClientDashboard.jsx"],
  "exclude": ["node_modules"]
}

